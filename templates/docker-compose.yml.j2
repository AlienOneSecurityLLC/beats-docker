---
version: '2'
services:
{%- for beat in beats.split() %}
  {{ beat }}:
    image: {{ registry }}/beats/{{ beat }}:{{ version }}
    container_name: {{ beat }}
    networks:
      - net
    {% if beat == 'filebeat' %}
    volumes:
      - /var/log:/mnt/log:ro
    {% endif %}
{% endfor %}

  elasticsearch:
    image: {{ registry }}/elasticsearch/elasticsearch:{{ version }}
    container_name: elasticsearch
    networks:
      - net

  kibana:
    image: {{ registry }}/kibana/kibana:{{ version }}
    container_name: kibana
    ports:
      - '5601:5601'
    networks:
      - net

networks:
  net:
